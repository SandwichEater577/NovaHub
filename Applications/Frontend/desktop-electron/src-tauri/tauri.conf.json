{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:3000",
    "distDir": "../out"
  },
  "package": {
    "productName": "Valyxo",
    "version": "0.6.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["nsis"],
      "identifier": "com.valyxo.desktop",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "nsis": {
          "installerIcon": "icons/icon.ico",
          "headerImage": "../installer-assets/header.bmp",
          "sidebarImage": "../installer-assets/sidebar.bmp",
          "installMode": "currentUser",
          "license": "../../LICENSE",
          "languages": ["English"]
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Valyxo",
        "width": 1400,
        "height": 900,
        "decorations": false,
        "transparent": true
      }
    ]
  }
}
